<div class="resume-well" data-bind="with: contactViewModel">
  <div class="row resume-heading align-center">
    <div class="col-lg-12">Contact</div>
  </div>
  <div class="row resume-row">
    <div class="col-lg-12">
      <div class="align-center">
        <a type="button" class="btn btn-primary" href="/linkedin">
          My LinkedIn profile
        </a>
      </div>
    </div>
  </div>
  <div class="row resume-row">
    <div class="col-lg-12">
      <div class="align-center">
        <a type="button" class="btn btn-success btn-lg" data-bind="click: showSendMail">
          <span class="glyphicon glyphicon-envelope"></span>
          Send me a message
        </a>
      </div>
    </div>
  </div>
  <div class="row resume-row" data-bind="visible: showForm">
    <div class="col-lg-offset-3 col-lg-6 col-xs-12">
      <form role="form">
        <div class="form-group" id="form-group-blob-from">
          <label for="blobFrom" class="control-label">Email / Name : </label>
          <input type="text" class="form-control" data-bind="textInput: mailFrom" placeholder="user@example.org, ...">
          <div class="blob-error" data-bind="visible: showFromError, text: fromErrorMessage"></div>
        </div>
        <div class="form-group" id="form-group-blob-content">
          <label for="blobContent" class="control-label">Message : </label>
          <textarea class="form-control" rows="5" data-bind="textInput: mailText" placeholder="Write something..."></textarea>
          <div class="blob-error" data-bind="visible: showTextError, text: textErrorMessage"></div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-lg-4 col-xs-6">
              <button type="button" class="btn btn-success" data-bind="click: sendMail">Click here to send it!</button>
            </div>
            <div class="col-lg-8 col-xs-6 align-left" data-bind="visible: showStatus, html: statusText"></div>
          </div>
        </div>
        <div class="form-group">
          <small style="color: grey"><a href="mailto:alex@jablon.me">Click here</a> to use your regular email client.</small>
        </div>
      </form>
    </div>
  </div>
</div>
